<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    android:title=""
    app:navigationIcon="?android:attr/homeAsUpIndicator">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/fLyout_AppMoreTitleToolBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toLeftOf="@+id/iV_appMoreTitleToolBar_search"
        android:layout_toStartOf="@+id/iV_appMoreTitleToolBar_search">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tView_appMoreTitleToolBar_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/nav_more_1"
                android:textColor="@color/nf_white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tView_appMoreTitleToolBar_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/nav_more_2"
                android:textColor="@color/nf_white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tView_appMoreTitleToolBar_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/nav_more_3"
                android:textColor="@color/nf_white"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iVew_appMoreTitleToolBar_cursor"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:background="@null"
            android:scaleType="matrix"
            android:src="@drawable/nf_cursor" />
    </FrameLayout>
        <ImageView
            android:id="@+id/iV_appMoreTitleToolBar_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/nf_search_white" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>