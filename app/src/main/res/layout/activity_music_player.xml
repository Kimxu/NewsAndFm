<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/nf_gray"
    tools:context="kimxu.newsandfm.aty.MusicPlayerActivity">

    <include
        android:id="@+id/tBar_atyXXX"
        layout="@layout/app_normal_toolbar" />

    <ImageView
        android:id="@+id/iv_atyMusicPlayer_photoAlbum"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/tBar_atyXXX"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        tools:src="@color/nf_black" />

    <SeekBar
        android:id="@+id/sb_musicPlayer_playProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_musicPlayer_playController"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:max="100"
        android:progressDrawable="@drawable/play_progressbar"
        android:thumb="@drawable/progress_thumb"
        android:thumbOffset="5dp" />

    <LinearLayout
        android:id="@+id/ll_musicPlayer_playController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_musicPlayer_playPre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/player_btn_pre_normal" />

        <ImageButton
            android:id="@+id/ib_musicPlayer_playStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/player_btn_play_normal" />

        <ImageButton
            android:id="@+id/ib_musicPlayer_playNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/player_btn_next_normal" />
    </LinearLayout>
</RelativeLayout>
