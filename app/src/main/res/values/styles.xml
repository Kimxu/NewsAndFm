<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:homeAsUpIndicator">@drawable/nf_back</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text">
        <item name="android:textSize">@dimen/textSize</item>

    </style>

    <style name="Text.Center" parent="Text">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/nf_gray</item>
    </style>
    <style name="Text.Left" parent="Text">
        <item name="android:layout_margin">@dimen/view_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/nf_black</item>
        <item name="android:background">@drawable/nf_selector_text_blue_round</item>
    </style>

    <style name="Button">
        <item name="android:layout_margin">@dimen/view_margin</item>
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">32dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_button</item>
    </style>

    <style name="Button.Blue" parent="Button">

        <item name="android:background">@drawable/nf_selector_button_blue</item>
        <item name="android:textColor">@color/selector_button</item>
    </style>
    <style name="Button.Red" parent="Button">
        <item name="android:background">@drawable/nf_selector_button_red</item>
        <item name="android:textColor">@color/selector_button</item>
    </style>
    <style name="Button.Blue.Round" parent="Button">
        <item name="android:background">@drawable/nf_selector_button_blue_round</item>
        <item name="android:textColor">@color/selector_button</item>
    </style>

    <style name="Button.Blue.Round.Stroke" parent="Button">
        <item name="android:background">@drawable/nf_selector_button_blue_round_stroke</item>
        <item name="android:textColor">@color/selector_button_blue_stroke</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">@dimen/textSize</item>
    </style>
    <style name="EditText.Search" parent="EditText">
        <item name="android:background">@color/nf_white</item>
    </style>
</resources>
