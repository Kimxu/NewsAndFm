<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"> <!-- 描边 -->
        <shape>
            <stroke android:width="1dip" android:color="#FF0000" />

            <!-- 实心 -->

            <solid android:color="#FF0000" />

            <!-- 圆角 -->

            <corners android:bottomLeftRadius="4dip" android:bottomRightRadius="4dip" android:topLeftRadius="4dip" android:topRightRadius="4dip" />
        </shape>
    </item>
    <item android:state_pressed="true"> <!-- 描边 -->
        <shape>
            <stroke android:width="1dip" android:color="#B22222" />

            <!-- 实心 -->

            <solid android:color="#B22222" />

            <!-- 圆角 -->
            <corners android:bottomLeftRadius="4dip" android:bottomRightRadius="4dip" android:topLeftRadius="4dip" android:topRightRadius="4dip" />
        </shape>
    </item>

</selector>