<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/nf_gray"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_notificationControl_album"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/nf_album_default" />

    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_notificationControl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:textColor="@color/nf_black"
            android:textSize="20sp"
            tools:text="一念天堂" />
<!--android:textColor="@android:style/TextAppearance.Material.Notification.Title"-->
        <LinearLayout
            android:id="@+id/ll_atyMusicPlayer_playController"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ib_notificationControl_playStart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/nf_player_btn_play_normal" />

            <ImageView
                android:id="@+id/ib_notificationControl_playNext"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/nf_player_btn_next_normal" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>